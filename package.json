{
  "name": "@nicojones/toast",
  "author": "@nicojones",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "clean": "npx rimraf library/node_modules library/dist",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=@nicojones/toast && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.11",
    "prettier": "3.4.2",
    "turbo": "latest"
  }
}
